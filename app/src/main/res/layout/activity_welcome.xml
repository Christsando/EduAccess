<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="#B4D4FF">

    <ImageView
        android:id="@+id/image_welcome"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="54dp"
        android:src="@drawable/welcome_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_slogan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="51dp"
        android:text="Please register to view personalized recommendations"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_welcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="80dp"
        android:text="@string/let_s_fin_the_a_with_us"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="168dp"
        android:layout_height="62dp"
        android:layout_below="@+id/comment"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="120dp"
        android:text="Register"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/login_link_welcome"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="155dp"
        android:text="@string/login_link_welcome"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>